extends pug/layout

block head
  link(rel="stylesheet", href="https://unpkg.com/swiper/swiper-bundle.min.css")
  script(src="https://unpkg.com/swiper/swiper-bundle.min.js")
  style.
    .swiper-container {
      width: 960px;
      height: 400px;
    }

    .swiper-slide {
      background-position: center;
      background-size: cover;
    }

    .swiper-slide-img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .swiper-pagination {
      position: static;
      margin-top: 5px;
    }

    .swiper-pagination-bullet {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      border: 1px solid white;
    }

    .swiper-pagination-bullet:not(:last-child) {
      margin-right: 5px;
    }

    .swiper-pagination-bullet-active {
      width: 16px;
      height: 16px;
    }

block content
  article
    h2.visually-hidden Главная страница

    .swiper-container.mySwiper
      .swiper-wrapper
        -
          const slides = [
            {file: "slide01.jpg", alt: "Тягач Вольво с контейнерами на телеге и на прицепе, вид спереди."},
            {file: "slide02.jpg", alt: "Три тягача Вольво."},
            {file: "slide03.jpg", alt: "Тягач Вольво с контейнерами на телеге и на прицепе, вид сбоку."},
            {file: "slide04.jpg", alt: "Реклама Трансинтек. Фура на горной дороге."}
          ]
        each slide in slides
          .swiper-slide
            img.swiper-slide-img(src="img/slides/"+slide.file, alt=slide.alt)

        .swiper-slide
          div(style="width: 100%; height: 100%; position: relative; padding: 10px; background-color: #365662; color: #c1cac6; font-family: 'Times New Roman', Times, serif; font-size: 24pt; font-weight: bold; font-style: italic;")
            video(src="img/slides/slide05/logo-sltk-126.mp4" muted autoplay loop style="display: block; float: left;")
            p(style="margin: 0; text-align: center;")
              span(style="border-bottom: 1px solid currentColor;") ООО <q>СИБИРСКАЯ ЛИНИЯ<br>ТРАНСПОРТНАЯ КОМПАНИЯ</q>
            p(style="margin-bottom: 0; text-align: center; font-size: 28pt;") ПЕРЕВОЗКА ГРУЗА В РЕСПУБЛИКУ<br>САХА (ЯКУТИЯ)
            p(style="margin-bottom: 0; margin-top: 0.5em; text-align: center;")
              a(href="https://слтк.рф", target="_blank", style="color: inherit;") https://слтк.рф
            p(style="margin-top: 0; text-align: center; font-size: 50%;") скидка при оформлении онлайн-заявки
            p(style="text-align: center;")
              | ТЕЛ.:
              a(href="tel:+74212204914", style="color: inherit;") +7(4212)204-914

      .swiper-button-prev
      .swiper-button-next
    .swiper-pagination

  script.
    const swiper = new Swiper(".mySwiper", {
      zoom: true,
      spaceBetween: 30,
      effect: "fade",
      // autoplay: {
      //   delay: 12500,
      //   disableOnInteraction: true,
      // },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });
